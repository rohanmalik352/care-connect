<%- include('partials/head') %>
<%- include('partials/navbar') %>

<!-- Hero Section -->
<section class="hero-section d-flex align-items-center">
  <div class="container text-white text-center">
    <div class="mb-4">
      <i class="fas fa-heartbeat hero-icon"></i>
    </div>
    <h1 class="display-4 fw-bold">CareConnect</h1>
    <p class="lead mb-4 opacity-90">Unified Patient Records & Doctor Collaboration Platform</p>
    <p class="mb-5 opacity-75 fs-5">Connecting patients, doctors, and healthcare across India — securely, efficiently, and at scale.</p>
    <div class="d-flex justify-content-center gap-3 flex-wrap">
      <a href="/auth/register" class="btn btn-light btn-lg px-5 fw-semibold">
        <i class="fas fa-user-plus me-2"></i>Get Started
      </a>
      <a href="/auth/login" class="btn btn-outline-light btn-lg px-5">
        <i class="fas fa-sign-in-alt me-2"></i>Login
      </a>
    </div>
  </div>
</section>

<!-- Stats Bar -->
<section class="stats-bar py-4 bg-white shadow-sm">
  <div class="container">
    <div class="row text-center g-4">
      <div class="col-md-3">
        <div class="stat-item">
          <div class="stat-number text-teal fw-bold">10K+</div>
          <div class="text-muted">Patients</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-item">
          <div class="stat-number text-teal fw-bold">500+</div>
          <div class="text-muted">Verified Doctors</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-item">
          <div class="stat-number text-teal fw-bold">30+</div>
          <div class="text-muted">Districts</div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-item">
          <div class="stat-number text-teal fw-bold">99.9%</div>
          <div class="text-muted">Uptime</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center fw-bold mb-2">Why CareConnect?</h2>
    <p class="text-center text-muted mb-5">A complete healthcare ecosystem, from records to collaboration</p>
    <div class="row g-4">
      <div class="col-md-4">
        <div class="feature-card card h-100 border-0 shadow-sm p-4 text-center">
          <div class="feature-icon mx-auto mb-3"><i class="fas fa-fingerprint"></i></div>
          <h5 class="fw-semibold">Biometric Access</h5>
          <p class="text-muted">Authorized doctors access patient records securely using biometric verification via UIDAI integration.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card card h-100 border-0 shadow-sm p-4 text-center">
          <div class="feature-icon mx-auto mb-3"><i class="fas fa-history"></i></div>
          <h5 class="fw-semibold">Complete Medical History</h5>
          <p class="text-muted">Every visit, prescription, lab report, and doctor note in one unified, searchable record.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card card h-100 border-0 shadow-sm p-4 text-center">
          <div class="feature-icon mx-auto mb-3"><i class="fas fa-comments"></i></div>
          <h5 class="fw-semibold">Doctor Collaboration</h5>
          <p class="text-muted">Doctors connect, discuss complex cases, and share medical knowledge across hospitals nationwide.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card card h-100 border-0 shadow-sm p-4 text-center">
          <div class="feature-icon mx-auto mb-3"><i class="fas fa-map-marker-alt"></i></div>
          <h5 class="fw-semibold">District to National</h5>
          <p class="text-muted">Starting at the district level, scaling to a pan-India health platform connecting all hospitals.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card card h-100 border-0 shadow-sm p-4 text-center">
          <div class="feature-icon mx-auto mb-3"><i class="fas fa-shield-alt"></i></div>
          <h5 class="fw-semibold">Bank-Level Security</h5>
          <p class="text-muted">AES-256 encryption, role-based access control, full audit logs — DPDP Act compliant.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card card h-100 border-0 shadow-sm p-4 text-center">
          <div class="feature-icon mx-auto mb-3"><i class="fas fa-wifi"></i></div>
          <h5 class="fw-semibold">Offline Support</h5>
          <p class="text-muted">Works in low-bandwidth and rural areas with intelligent offline sync when connectivity is restored.</p>
        </div>
      </div>
    </div>
  </div>
</section>

