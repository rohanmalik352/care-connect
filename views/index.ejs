<%- include('partials/head') %>
<%- include('partials/navbar') %>

<!-- Hero -->
<section class="hero-section">
  <div class="container text-white text-center position-relative" style="z-index:2">
    <div class="hero-badge mb-3"><i class="fas fa-shield-alt me-2"></i>ABHA Compliant · DPDP Certified</div>
    <h1 class="hero-title text-white mb-4">
      India's <span class="green">Unified</span><br>
      <span class="purple">Health</span> Platform
    </h1>
    <p class="hero-subtitle mb-5">Secure patient records, doctor collaboration & AI-powered healthcare — connecting every corner of India.</p>
    <div class="d-flex justify-content-center gap-3 flex-wrap mb-5">
      <a href="/auth/register" class="btn btn-green btn-lg px-5">
        <i class="fas fa-user-plus me-2"></i>Get Started Free
      </a>
      <a href="/auth/login" class="btn btn-outline-green btn-lg px-5" style="color:#fff;border-color:rgba(255,255,255,0.4)">
        <i class="fas fa-sign-in-alt me-2"></i>Login
      </a>
    </div>
    <div class="d-flex justify-content-center gap-3 flex-wrap">
      <div class="hero-pill"><i class="fas fa-fingerprint"></i>Biometric Access</div>
      <div class="hero-pill"><i class="fas fa-lock"></i>AES-256 Encrypted</div>
      <div class="hero-pill"><i class="fas fa-wifi"></i>Works Offline</div>
    </div>
  </div>
</section>

<!-- Stats Bar -->
<section class="stats-bar py-4 shadow-sm">
  <div class="container">
    <div class="row text-center g-4">
      <div class="col-6 col-md-3"><div class="stat-number">10K+</div><div class="text-muted small fw-500">Patients</div></div>
      <div class="col-6 col-md-3"><div class="stat-number">500+</div><div class="text-muted small">Verified Doctors</div></div>
      <div class="col-6 col-md-3"><div class="stat-number">30+</div><div class="text-muted small">Districts</div></div>
      <div class="col-6 col-md-3"><div class="stat-number">99.9%</div><div class="text-muted small">Uptime</div></div>
    </div>
  </div>
</section>

<!-- Features -->
<section class="py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="fw-800 mb-2" style="font-size:2.2rem;letter-spacing:-1px">Why <span style="color:var(--purple)">CareConnect</span>?</h2>
      <p class="text-muted">A complete healthcare ecosystem, from records to collaboration</p>
    </div>
    <div class="row g-4">
      <% const features = [
        {icon:'fas fa-fingerprint', title:'Biometric Access', desc:'Authorized doctors access patient records using UIDAI biometric verification — secure and instant.', color:'fi-purple'},
        {icon:'fas fa-history', title:'Complete History', desc:'Every visit, prescription, lab report and doctor note in one unified, searchable record.', color:'fi-green'},
        {icon:'fas fa-comments', title:'Doctor Collaboration', desc:'Doctors connect, discuss complex cases, and share knowledge across hospitals nationwide.', color:'fi-purple'},
        {icon:'fas fa-map-marker-alt', title:'District to National', desc:'Starting district-level, scaling to pan-India — connecting government and private hospitals.', color:'fi-green'},
        {icon:'fas fa-shield-alt', title:'Bank-Level Security', desc:'AES-256 encryption, role-based access control, full audit logs — DPDP Act compliant.', color:'fi-purple'},
        {icon:'fas fa-robot', title:'AI-Powered Insights', desc:'AI analyzes past cases and suggests treatment options, risk alerts, and drug interactions.', color:'fi-green'},
      ]; %>
      <% features.forEach(f => { %>
        <div class="col-md-4">
          <div class="cc-card p-4 h-100 text-center">
            <div class="feature-icon-wrap <%= f.color %>"><i class="<%= f.icon %>"></i></div>
            <h5 class="fw-700 mb-2"><%= f.title %></h5>
            <p class="text-muted small mb-0"><%= f.desc %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- CTA -->
<section class="py-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-6">
        <div class="cc-card p-4 h-100" style="background:linear-gradient(135deg,rgba(124,58,237,0.08),rgba(124,58,237,0.02))">
          <div class="d-flex align-items-center gap-3 mb-3">
            <div class="stat-icon-dash si-purple"><i class="fas fa-user-md"></i></div>
            <h4 class="fw-700 mb-0" style="color:var(--purple)">For Doctors</h4>
          </div>
          <ul class="list-unstyled text-muted mb-4">
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Instant access to patient history</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Add records, prescriptions, lab reports</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Collaborate with peers on complex cases</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Knowledge forum & case discussions</li>
          </ul>
          <a href="/auth/register" class="btn btn-purple w-100">Register as Doctor</a>
        </div>
      </div>
      <div class="col-md-6">
        <div class="cc-card p-4 h-100" style="background:linear-gradient(135deg,rgba(46,204,113,0.08),rgba(46,204,113,0.02))">
          <div class="d-flex align-items-center gap-3 mb-3">
            <div class="stat-icon-dash si-green"><i class="fas fa-user-injured"></i></div>
            <h4 class="fw-700 mb-0" style="color:var(--green-dark)">For Patients</h4>
          </div>
          <ul class="list-unstyled text-muted mb-4">
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Access complete medical history anytime</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Share records with any doctor securely</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Track prescriptions & follow-up appointments</li>
            <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Upload lab reports & scans</li>
          </ul>
          <a href="/auth/register" class="btn btn-green w-100">Register as Patient</a>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
